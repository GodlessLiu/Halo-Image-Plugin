{
    "manifest_version": 3,
    "version":"0.0.1",
    "name": "Halo Image Plugin",
    "description": "A chrome plugin to upload image to yout Halo attachment",
    "permissions": [
        "contextMenus", "storage","notifications"
    ],
    "host_permissions":["https://aifengliu.top/*"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "options_ui": {
      "page": "pages/options.html",
      "open_in_tab": false
    },
    "icons": {
      "48": "icon.png"
    }
}